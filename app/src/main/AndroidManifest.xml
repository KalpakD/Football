<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kalpak.football">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:hardwareAccelerated="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity
            android:name=".activities.TeamListActivity"
            android:label="@string/title_activity_team_list"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.PlayersListActivity"
            android:label="@string/title_activity_players_list"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.LeagueDetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_league_detail"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".activities.TeamDetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_team_detail"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".activities.PlayerDetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_player_detail"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SearchActivity"/>
    </application>

</manifest>